<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:text="الدخول كـ زبون"
        android:id="@+id/btn_customer_enter"
        android:layout_above="@+id/btn_seller_enter"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="25dp"
        android:background="#470e4582"
        android:textColor="#524c03" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="الدخول كـ بائع"
        android:id="@+id/btn_seller_enter"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btn_customer_enter"
        android:layout_alignStart="@+id/btn_customer_enter"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="25dp"
        android:background="#470e4582"
        android:textColor="#524c03" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="الدخول كـ سائق"
        android:id="@+id/btn_driver_enter"
        android:layout_below="@+id/btn_seller_enter"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:textSize="25dp"
        android:background="#470e4582"
        android:textColor="#524c03" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="طريقة دخول التطبيق"
        android:id="@+id/tv_costumer_page_enterWay"
        android:textSize="30dp"
        android:layout_above="@+id/btn_customer_enter"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="43dp" />
</RelativeLayout>