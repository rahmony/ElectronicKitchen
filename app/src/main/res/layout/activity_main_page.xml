<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:weightSum="1"
    android:background="@drawable/pattern">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/Hello"
        android:id="@+id/text_welcome"
        android:layout_marginTop="20dp"
        android:textColor="#7e0f6ace"
        android:textSize="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/enter_way"
            android:textColor="#7e0f6ace"
            android:id="@+id/tv_costumer_page_enterWay"
            android:textSize="20dp"
            android:layout_above="@+id/btn_customer_enter"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="43dp"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="43dp"
        android:textStyle="bold" />



        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/costumer_enter"
            android:id="@+id/btn_customer_enter"
            android:layout_above="@+id/btn_seller_enter"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="25dp"
            android:background="#420f6ace"
            android:textColor="#fbf9f9"
            android:layout_gravity="center_horizontal|top"
            android:onClick="onClick"
            android:textStyle="bold" />


        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/seller_enter"
            android:id="@+id/btn_seller_enter"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/btn_customer_enter"
            android:layout_alignStart="@+id/btn_customer_enter"
            android:layout_marginTop="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="25dp"
            android:background="#420f6ace"
            android:textColor="#ffffff"
            android:layout_gravity="center_horizontal|top"
            android:onClick="onClick"
            android:textStyle="bold" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/driver_enter"
            android:id="@+id/btn_driver_enter"
            android:layout_below="@+id/btn_seller_enter"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:textSize="25dp"
            android:background="#420f6ace"
            android:textColor="#fefcfc"
            android:layout_gravity="center"
            android:onClick="onClick"
            android:textStyle="bold" />


</LinearLayout>