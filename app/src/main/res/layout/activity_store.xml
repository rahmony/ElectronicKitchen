<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1"
    android:rowCount="7">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:background="#d86161">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/store_name"
            android:id="@+id/textView"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:rowCount="3"
        android:columnCount="2">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="1"
            android:rowCount="1"
            android:layout_row="0"
            android:layout_column="0">

            <ImageView
                android:layout_width="101dp"
                android:layout_height="100dp"
                android:id="@+id/imageView"
                android:src="@drawable/ic_launcher"
                android:layout_row="0"
                android:layout_column="0" />
        </GridLayout>

        <GridLayout
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:columnCount="4"
            android:rowCount="3"
            android:background="#91d5caca">

            <TextView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:text="@string/store_followers"
                android:id="@+id/textView3"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="89dp"
                android:layout_height="20dp"
                android:text="@string/store_following"
                android:id="@+id/textView5"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="104dp"
                android:layout_height="30dp"
                android:text="@string/store_posts"
                android:id="@+id/textView6"
                android:layout_row="0"
                android:layout_column="2"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="000"
                android:id="@+id/textView7"
                android:layout_row="1"
                android:layout_column="0"
                android:gravity="center_horizontal|right"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="000"
                android:id="@+id/textView8"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="000"
                android:id="@+id/textView4"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="222dp"
                android:layout_height="27dp"
                android:text="@string/edit_profile"
                android:id="@+id/button"
                android:textSize="15dp"
                android:layout_row="2"
                android:layout_column="0"
                android:background="#d7d5d5"
                android:layout_gravity="center_horizontal"
                android:layout_columnSpan="4" />

        </GridLayout>

    </GridLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#edd4d4">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/store_description"
            android:id="@+id/textView2"
            android:textSize="14dp"
            android:gravity="center_vertical|center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_row="3"
        android:layout_column="0">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:src="@drawable/ic_launcher"
            android:layout_weight="1" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton2"
            android:src="@drawable/ic_launcher"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:layout_row="4"
        android:layout_column="0">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView4"
            android:src="@drawable/ic_launcher"
            android:layout_weight="1" />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView5"
            android:src="@drawable/ic_launcher"
            android:layout_weight="1" />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView6"
            android:src="@drawable/ic_launcher"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:layout_row="5"
        android:layout_column="0"> <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView7"
        android:src="@drawable/ic_launcher"
        android:layout_weight="1" />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView8"
            android:src="@drawable/ic_launcher"
            android:layout_weight="1" />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView9"
            android:src="@drawable/ic_launcher"
            android:layout_weight="1" /></LinearLayout
        >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:layout_row="6"
        android:layout_column="0"> <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView10"
        android:src="@drawable/ic_launcher"
        android:layout_weight="1" />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView11"
            android:src="@drawable/ic_launcher"
            android:layout_weight="1" />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView12"
            android:src="@drawable/ic_launcher"
            android:layout_weight="1" /></LinearLayout>

</GridLayout>