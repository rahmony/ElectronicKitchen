<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:columnCount="1"
    android:rowCount="4">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_gravity="center_horizontal"
        android:background="#7d0f6ace"
        android:layout_column="0"
        android:layout_row="0"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/sin_up"
            android:id="@+id/text_app_name"
            android:textColor="#ffffff"
            android:layout_gravity="center" />
    </FrameLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="274dp"
        android:layout_column="0"
        android:layout_row="1"
        android:columnCount="2"
        android:rowCount="6">

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/et_first_name"
            android:layout_weight="1.00"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="@string/first_name"
            android:id="@+id/text_first_name"
            android:layout_weight="0.90"
            android:textSize="15dp"
            android:layout_row="0"
            android:textColor="#000000"
            android:layout_column="0"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"

            android:id="@+id/et_last_name"
            android:layout_weight="1"
            android:layout_column="1" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="@string/last_name"
            android:id="@+id/text_last_name"
            android:layout_weight="1"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_column="0"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"

            android:id="@+id/et_email"
            android:layout_weight="1"
            android:layout_column="1" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="@string/email"
            android:id="@+id/text_email"
            android:layout_weight="1"
            android:textColor="#000000"
            android:layout_column="0"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"

            android:id="@+id/et_phone_number"
            android:layout_weight="1"
            android:layout_column="1" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="@string/phone_number"
            android:id="@+id/text_phone_number"
            android:layout_weight="1"
            android:textColor="#000000"
            android:layout_column="0"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"

            android:id="@+id/et_address"
            android:layout_weight="1"
            android:layout_column="1" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="@string/address"
            android:id="@+id/text_address"
            android:layout_weight="1"
            android:textColor="#000000"
            android:layout_column="0"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"

            android:id="@+id/et_password"
            android:layout_weight="1"
            android:layout_column="1" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/password"
            android:id="@+id/text_password"
            android:layout_weight="1"
            android:textColor="#000000"
            android:layout_column="0"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp" />
    </GridLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:weightSum="1"
        android:layout_column="0"
        android:layout_row="2">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.29"
            android:orientation="horizontal"
            android:weightSum="1"
            android:id="@+id/myRadioGroup">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/makka"
                android:id="@+id/radioButton_makka"
                android:textSize="15dp"
                android:textColor="#000000" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/madina"
                android:id="@+id/radioButton_madina"
                android:textSize="15dp"
                android:checked="false"
                android:textColor="#000000" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/jeddah"
                android:id="@+id/radioButton_jeddah"
                android:textSize="15dp"
                android:textColor="#000000" />

        </RadioGroup>

        <TextView
            android:layout_width="81dp"
            android:layout_height="30dp"
            android:text="@string/city"
            android:id="@+id/text_city"
            android:layout_weight="0.54"
            android:gravity="center"
            android:textColor="#000000" />

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:layout_column="0"
        android:layout_row="3"
        android:rowCount="2"
        android:columnCount="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:layout_column="0"
            android:layout_row="0">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bands_agree"
                android:id="@+id/radioButton_bands_agree"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000" />

            <Button
                android:layout_width="176dp"
                android:layout_height="wrap_content"
                android:text="@string/share_location"
                android:id="@+id/btn_share_location"
                android:background="#470e4582"
                android:textColor="#050505"
                android:layout_row="0"
                android:layout_column="1"
                android:gravity="center"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1">

            <Button
                android:layout_width="137dp"
                android:layout_height="wrap_content"
                android:text="@string/confirm"
                android:id="@+id/btn_confirm"
                android:background="#470e4582"
                android:textColor="#050505"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_weight="0.11"
                android:layout_gravity="right|center_vertical" />

            <Button
                android:layout_width="137dp"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:id="@+id/btn_cancel"
                android:background="#470e4582"
                android:textColor="#050505"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="left|center_vertical" />
        </FrameLayout>

    </GridLayout>


</GridLayout>