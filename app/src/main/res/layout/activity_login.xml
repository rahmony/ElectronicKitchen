<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:columnCount="1"
    android:rowCount="3"
    android:clickable="false"
    android:background="@drawable/ic_back3">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:weightSum="1"
        android:background="#51125891"
        android:layout_column="0"
        android:layout_row="1"
        android:gravity="center">

        <EditText
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:id="@+id/et_login_email"
            android:textColor="#050505"
            android:hint="@string/email"
            android:layout_gravity="center_horizontal"
            android:background="#89fcf8f8"
            android:gravity="center"
            android:autoText="false"
            android:maxLength="50" />

        <EditText
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="@string/password"
            android:textColor="#050505"
            android:id="@+id/et_login_password"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:background="#7dfcf8f8"
            android:layout_marginTop="10dp"
            android:maxLength="30" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.13"
        android:layout_column="0"
        android:layout_row="2"
        android:orientation="vertical">

        <net.rahmony.electronickitchen.ClassAssets.FontCustomButton
            android:layout_width="192dp"
            android:layout_height="37dp"
            android:text="@string/log_in"
            android:id="@+id/btn_login"
            android:layout_gravity="center_horizontal|top"
            android:textSize="20sp"
            android:background="#51125891"
            android:textColor="#050505"
            android:enabled="true"
            android:onClick="onClick"
            android:layout_marginTop="5dp" />

        <net.rahmony.electronickitchen.ClassAssets.FontCustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_forgot_password"
            android:id="@+id/text_login_forgot_password"
            android:layout_gravity="center"
            android:textColor="#f17f7f7f"
            android:onClick="onClick"
            android:layout_marginTop="10dp"
            android:hint="@string/email" />

        <net.rahmony.electronickitchen.ClassAssets.FontCustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_sign_up"
            android:id="@+id/text_login_signup"
            android:layout_gravity="center_horizontal|bottom"
            android:onClick="onClick"
            android:textColor="#dc000000"
            android:layout_marginTop="10dp" />
    </LinearLayout>

</GridLayout>