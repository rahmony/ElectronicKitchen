<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#ffffff">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_gravity="center_horizontal"
        android:background="#420f6ace">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/log_in"
            android:id="@+id/text_app_name"
            android:textColor="#ffffff"
            android:layout_gravity="center" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.14">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="108dp"
            android:id="@+id/image_logo"
            android:src="@drawable/ic_mobile_login_icon"
            android:layout_gravity="center"
            android:layout_marginTop="10dp" />
    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:background="#420f6ace"
        android:layout_marginTop="20dp">

        <EditText
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:id="@+id/et_login_email"
            android:textColor="#050505"
            android:layout_gravity="left|center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/email"
            android:id="@+id/text_login_email"
            android:textColor="#050505"
            android:layout_gravity="right|center_vertical"
            android:textSize="15dp"
            android:textIsSelectable="true"
            android:layout_weight="0.68"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:background="#420f6ace">

        <EditText
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:textColor="#050505"
            android:id="@+id/et_login_password"
            android:layout_gravity="left|bottom" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/password"
            android:id="@+id/text_login_password"
            android:layout_gravity="right|bottom"
            android:textColor="#050505"
            android:textSize="15dp"
            android:textIsSelectable="true"
            android:layout_weight="0.74"
            android:gravity="center" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.13"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_forgot_password"
            android:id="@+id/text_login_forgot_password"
            android:layout_gravity="center_horizontal|bottom"
            android:textColor="#f17f7f7f"
            android:onClick="onClick" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.28"
        android:layout_marginTop="60dp">


        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#1E88E5"
            android:text="@string/log_in"
            android:onClick="onClick"
            android:layout_gravity="center" />

    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_sign_up"
            android:id="@+id/text_login_signup"
            android:layout_gravity="center_horizontal|bottom"
            android:onClick="onClick" />
    </LinearLayout>

</LinearLayout>