<?xml version="1.0" encoding="utf-8"?>


<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_row="0"
    android:layout_column="0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#7d0f6ace">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="452dp"
        android:layout_gravity="center|bottom"
        android:background="@drawable/ic_mainbackground">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/store_description"
            android:layout_marginRight="10dp"
            android:id="@+id/text_product_discription"
            android:layout_alignBottom="@+id/et_product_discription"
            android:textColor="#bb0f7bce"
            android:layout_alignParentLeft="false"
            android:layout_marginLeft="10dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/product_price"
            android:id="@+id/text_product_price"
            android:layout_marginRight="20dp"
            android:layout_above="@+id/et_product_discription"
            android:layout_alignParentEnd="false"
            android:textColor="#bb0f7bce"
            android:layout_alignParentLeft="false"
            android:layout_marginLeft="10dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/product_name"
            android:id="@+id/text_product_name"
            android:layout_marginRight="20dp"
            android:layout_above="@+id/et_product_price"
            android:layout_alignParentEnd="false"
            android:layoutDirection="rtl"
            android:textColor="#bb0f7bce"
            android:singleLine="false"
            android:layout_alignParentLeft="false"
            android:layout_marginLeft="10dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/product_Image"
            android:id="@+id/text_product_image"
            android:textColor="#bb0f7bce"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/text_product_discription"
            android:textStyle="bold" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/et_product_price"
            android:layout_below="@+id/et_product_name"
            android:layout_alignParentEnd="false"
            android:layout_alignStart="@+id/et_product_discription" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/et_product_name"
            android:layout_alignParentTop="true"
            android:layout_marginTop="46dp"
            android:layout_alignParentEnd="false"
            android:layout_alignStart="@+id/et_product_discription" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/et_product_discription"
            android:layout_below="@+id/et_product_price"
            android:layout_alignStart="@+id/btnImage_product_image" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnImage_product_image"
            android:src="@mipmap/camera_logo"
            android:adjustViewBounds="false"
            android:layout_weight="0"
            android:onClick="onClick"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="#9a908378" />

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="@string/save"
            android:id="@+id/btn_product_save"
            android:background="#9a908378"
            android:textColor="#FFFFFF"
            android:onClick="onClick"
            android:layout_below="@+id/btnImage_product_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/create_new_product"
        android:id="@+id/textView8"
        android:layout_gravity="center|top"
        android:layout_marginTop="18dp"
        android:textColor="#ffffff" />
</FrameLayout>
