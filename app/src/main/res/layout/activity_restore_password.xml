<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.rahmony.electronickitchen.ClassActivity.RestorePasswordActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:layout_weight="0.02"
        android:id="@+id/layout1">

        <TextView
            android:layout_width="167dp"
            android:layout_height="25dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/restore_password"
            android:id="@+id/text_restore_password"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="#FFFFFF" />

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="194dp"
        android:weightSum="1"
        android:background="#33b5e5"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_marginTop="50dp"
        android:layout_below="@id/layout1"
        android:id="@+id/layout2"
        android:gravity="center">

        <net.rahmony.electronickitchen.ClassAssets.FontEditText
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:id="@+id/et_current_email"
            android:textColor="#050505"
            android:hint="@string/email"
            android:layout_gravity="center_horizontal"
            android:background="#9cfcf8f8"
            android:gravity="center"
            android:autoText="false"
            android:maxLength="50"
            />

        <EditText
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:id="@+id/et_current_phoneNumber"
            android:textColor="#050505"
            android:hint="@string/phone_number"
            android:layout_gravity="center_horizontal"
            android:background="#9cfcf8f8"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:autoText="false"
            android:maxLength="50"
            />

        <net.rahmony.electronickitchen.ClassAssets.FontEditText
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="@string/password"
            android:textColor="#050505"
            android:id="@+id/et_new_password"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:background="#7dfcf8f8"
            android:layout_marginTop="10dp"
            android:maxLength="30"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.13"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_below="@id/layout2"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:weightSum="1">


        <net.rahmony.electronickitchen.ClassAssets.FontCustomButton
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="@string/restore_password"
            android:id="@+id/btn_restore_password"
            android:layout_gravity="center_horizontal"
            android:textSize="7sp"
            android:background="#33b5e5"
            android:textColor="#050505"
            android:enabled="true"
            android:onClick="onClick"
            android:layout_marginTop="10dp"
            android:layout_row="1"
            android:layout_column="0"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:layout_weight="0.15" />

        <net.rahmony.electronickitchen.ClassAssets.FontCustomButton
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:id="@+id/btn_cancel_restore_password"
            android:layout_gravity="center_horizontal"
            android:textSize="7sp"
            android:background="#33b5e5"
            android:textColor="#050505"
            android:enabled="true"
            android:onClick="onClick"
            android:layout_marginTop="10dp"
            android:layout_row="1"
            android:layout_column="0"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:layout_weight="0.15" />


    </LinearLayout>

</RelativeLayout>
