<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/order"
        android:id="@+id/trackingForStore_text_order"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="140dp"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/product_name"
        android:id="@+id/trackingForStore_text_nameOfProduct"
        android:layout_below="@+id/trackingForStore_text_order"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/product_price"
        android:id="@+id/trackingForStore_text_priceOfProduct"
        android:layout_alignBottom="@+id/trackingForStore_text_nameOfProduct"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/product_Quantity"
        android:id="@+id/trackingForStore_text_quantityOfProduct"
        android:layout_alignTop="@+id/trackingForStore_text_nameOfProduct"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/product_name"
        android:id="@+id/trackingForStore_text_product_name_val"
        android:layout_below="@+id/trackingForStore_text_nameOfProduct"
        android:layout_alignEnd="@+id/trackingForStore_text_nameOfProduct"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/product_Quantity"
        android:id="@+id/trackingForStore_text_product_quantity_val"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/trackingForStore_text_quantityOfProduct"
        android:layout_above="@+id/trackingForStore_text_status"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/product_price"
        android:id="@+id/trackingForStore_text_product_price_val"
        android:layout_above="@+id/trackingForStore_text_status"
        android:layout_alignStart="@+id/trackingForStore_text_priceOfProduct"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/status"
        android:id="@+id/trackingForStore_text_status"
        android:layout_marginTop="63dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/trackingForStore_text_product_name_val"
        android:layout_alignStart="@+id/trackingForStore_text_product_name_val" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="الحالة الحالية"
        android:id="@+id/tracking_text_current_status"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignTop="@+id/trackingForStore_text_status"
        android:layout_toEndOf="@+id/trackingForStore_text_product_price_val" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ready"
        android:id="@+id/trackingForStore_btn_order_ready"
        android:layout_marginTop="49dp"
        android:layout_below="@id/trackingForStore_text_status"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
