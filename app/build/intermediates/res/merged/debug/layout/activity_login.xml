<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_name"
        android:id="@+id/text_app_name"
        android:textColor="#7d0f6ace"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp" />

    <ImageView
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:id="@+id/image_login"
        android:src="@drawable/ic_launcher"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/text_app_name"
        android:layout_alignStart="@+id/text_app_name"
        android:layout_alignEnd="@+id/text_app_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/email"
        android:id="@+id/text_login_email"
        android:layout_below="@+id/image_login"
        android:textColor="#7d0f6ace"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="36dp"
        android:layout_marginRight="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/et_login_email"
        android:layout_alignBottom="@+id/text_login_email"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_toStartOf="@+id/text_login_email" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/password"
        android:id="@+id/text_login_password"
        android:textColor="#7d0f6ace"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/text_login_email"
        android:layout_alignEnd="@+id/text_login_email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/ed_login_password"
        android:layout_alignBottom="@+id/text_login_password"
        android:layout_alignStart="@+id/et_login_email"
        android:layout_alignEnd="@+id/et_login_email" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/log_in"
        android:id="@+id/btn_login"
        android:background="#470e4582"
        android:textColor="#050505"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/text_login_forgot_password"
        android:layout_alignEnd="@+id/ed_login_password" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/login_forgot_password"
        android:id="@+id/text_login_forgot_password"
        android:textColor="#ff0011"
        android:layout_below="@+id/ed_login_password"
        android:layout_alignStart="@+id/ed_login_password"
        android:layout_marginTop="23dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/login_sign_up"
        android:id="@+id/text_login_sinup"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:textColor="#ff0011"
        android:layout_alignEnd="@+id/text_login_email"
        android:layout_alignStart="@+id/text_login_forgot_password" />


</RelativeLayout>