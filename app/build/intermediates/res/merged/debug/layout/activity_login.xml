<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#d8d7d7">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_gravity="center_horizontal"
        android:background="#f1baba">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/app_name"
            android:id="@+id/text_app_name"
            android:layout_gravity="center" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.14">

        <ImageView
            android:layout_width="93dp"
            android:layout_height="93dp"
            android:id="@+id/image_login"
            android:src="@drawable/ic_launcher"
            android:layout_gravity="center" />
    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:background="#a6a3a3">

        <EditText
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:id="@+id/et_login_email"
            android:layout_gravity="left|center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/email"
            android:id="@+id/text_login_email"
            android:layout_gravity="right|center_vertical"
            android:textSize="15dp"
            android:textIsSelectable="true"
            android:layout_weight="0.68" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:background="#a6a3a3">

        <EditText
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/et_login_password"
            android:layout_gravity="left|bottom" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/password"
            android:id="@+id/text_login_password"
            android:layout_gravity="right|bottom"
            android:textSize="15dp"
            android:textIsSelectable="true"
            android:layout_weight="0.74" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.13">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_forgot_password"
            android:id="@+id/text_login_forgot_password"
            android:layout_gravity="center_horizontal|bottom" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.28">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/login_sign_up"
            android:id="@+id/tv_login"
            android:layout_gravity="center_horizontal|bottom" />

        <Button
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:text="@string/log_in"
            android:id="@+id/btn_login"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:textColor="#000000"
            android:background="#3eae0b"
            android:onClick="onLoginClick" />
    </FrameLayout>

</LinearLayout>