<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:columnCount="2"
    android:rowCount="3"
    android:clickable="false"
    android:background="@drawable/ntitled">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:id="@+id/imageView"
        android:layout_row="0"
        android:layout_column="0"
        android:src="@drawable/foodicon1" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:weightSum="1"
        android:background="#240b7ac4"
        android:layout_column="0"
        android:layout_row="1"
        android:gravity="center">

        <net.rahmony.electronickitchen.ClassAssets.FontEditText
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:id="@+id/et_login_email"
            android:textColor="#050505"
            android:hint="@string/email"
            android:layout_gravity="center_horizontal"
            android:background="#9cfcf8f8"
            android:gravity="center"
            android:autoText="false"
            android:maxLength="50"
            />

        <net.rahmony.electronickitchen.ClassAssets.FontEditText
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="@string/password"
            android:textColor="#050505"
            android:id="@+id/et_login_password"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:background="#7dfcf8f8"
            android:layout_marginTop="10dp"
            android:maxLength="30"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.13"
        android:layout_column="0"
        android:layout_row="2"
        android:orientation="vertical"
        android:layout_marginBottom="30dp"
        android:weightSum="1">


        <net.rahmony.electronickitchen.ClassAssets.FontCustomButton
            android:layout_width="141dp"
            android:layout_height="40dp"
            android:text="@string/log_in"
            android:id="@+id/btn_login"
            android:layout_gravity="center_horizontal"
            android:textSize="7sp"
            android:background="#150f82ce"
            android:textColor="#050505"
            android:enabled="true"
            android:onClick="onClick"
            android:layout_marginTop="10dp"
            android:layout_row="1"
            android:layout_column="0"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:layout_weight="0.15" />

        <net.rahmony.electronickitchen.ClassAssets.FontCustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_forgot_password"
            android:id="@+id/text_login_forgot_password"
            android:layout_gravity="center"
            android:textColor="#f17f7f7f"
            android:onClick="onClick"
            android:layout_marginTop="15dp"
            android:hint="@string/email"
            android:textStyle="bold"
            android:visibility="visible" />

        <net.rahmony.electronickitchen.ClassAssets.FontCustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_sign_up"
            android:id="@+id/text_login_signup"
            android:layout_gravity="center_horizontal|bottom"
            android:onClick="onClick"
            android:textColor="#dc000000"
            android:layout_marginTop="15dp" />
    </LinearLayout>

</GridLayout>