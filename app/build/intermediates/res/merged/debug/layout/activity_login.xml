<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.rahmony.electronickitchen.LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_name"
        android:id="@+id/text_app_name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/image_logo"
        android:src="@drawable/ic_launcher"
        android:layout_below="@+id/text_app_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/login_email"
        android:id="@+id/text_login_email"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#e54f0505" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/login_password"
        android:id="@+id/text_login_password"
        android:layout_below="@id/text_login_email"
        android:layout_alignRight="@id/text_login_email"
        android:layout_alignEnd="@id/text_login_email"
        android:layout_marginTop="23dp"
        android:textColor="#e54f0505" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/et_login_email"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/text_login_email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="5dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/et_login_password"
        android:layout_below="@+id/et_login_email"
        android:layout_alignRight="@+id/text_app_name"
        android:layout_alignEnd="@+id/text_app_name"
        android:layout_alignLeft="@+id/et_login_email"
        android:layout_alignStart="@+id/et_login_email"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/login_forgot_password"
        android:id="@+id/text_login_forgot_password"
        android:layout_below="@+id/et_login_password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="20dp"
        android:textColor="#61abdd" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/log_in"
        android:id="@+id/btn_login"
        android:layout_below="@+id/text_login_forgot_password"
        android:layout_alignLeft="@+id/image_logo"
        android:layout_alignStart="@+id/image_logo"
        android:layout_marginTop="27dp"
        android:layout_marginLeft="20dp"
        android:textColor="#524c03"
        android:background="#470e4582" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/login_sign_up"
        android:id="@+id/tv_costumer_page_enterWay"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/text_login_password"
        android:layout_alignEnd="@+id/text_login_password"
        android:layout_marginRight="70dp"
        android:textColor="#77b5e8" />
</RelativeLayout>
