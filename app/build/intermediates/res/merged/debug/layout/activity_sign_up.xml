<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_gravity="center_horizontal"
        android:background="#470e4582">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/sin_up"
            android:id="@+id/text_app_name"
            android:textColor="#050505"
            android:layout_gravity="center" />
    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:weightSum="1">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_first_name"
            android:layout_weight="0.77" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/first_name"
            android:id="@+id/text_first_name"
            android:layout_weight="0.20"
            android:textSize="15dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:weightSum="1">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/et_last_name"
            android:layout_weight="0.76" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/last_name"
            android:id="@+id/text_last_name"
            android:layout_weight="0.20"
            android:textSize="15dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:weightSum="1">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/et_email"
            android:layout_weight="0.84" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:id="@+id/text_email"
            android:layout_weight="0.12" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:weightSum="1">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/et_phone_number"
            android:layout_weight="0.77" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone_number"
            android:id="@+id/text_phone_number"
            android:layout_weight="0.19" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:weightSum="1">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/et_address"
            android:layout_weight="0.72"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address"
            android:id="@+id/text_address"
            android:layout_weight="0.23" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:weightSum="1">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/et_password"
            android:layout_weight="0.78" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password"
            android:id="@+id/text_password"
            android:layout_weight="0.16" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/jeddah"
                android:id="@+id/radioButton_jeddah"
                android:textSize="15dp"
                android:layout_weight="0.38" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/madina"
                android:id="@+id/radioButton_madina"
                android:textSize="15dp"
                android:layout_weight="0.19"
                android:checked="false" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </LinearLayout>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/makka"
            android:id="@+id/radioButton_makka"
            android:textSize="15dp" />

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="@string/city"
            android:id="@+id/text_city"
            android:gravity="right" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="191dp"
            android:layout_height="37dp"
            android:text="@string/confirm"
            android:id="@+id/btn_confirm"
            android:layout_gravity="right|bottom"
            android:background="#470e4582"
            android:textColor="#050505"/>

        <Button
            android:layout_width="170dp"
            android:layout_height="38dp"
            android:text="@string/cancel"
            android:id="@+id/btn_cancel"
            android:background="#470e4582"
            android:textColor="#050505"
            android:layout_gravity="left|bottom" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bands_agree"
            android:id="@+id/radioButton_bands_agree"
            android:layout_gravity="right|center_vertical" />

        <Button
            android:layout_width="129dp"
            android:layout_height="38dp"
            android:text="@string/share_location"
            android:id="@+id/btn_share_location"
            android:background="#470e4582"
            android:textColor="#050505"
            android:layout_gravity="center_horizontal|top" />
    </FrameLayout>


</LinearLayout>