<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Store Name"
        android:id="@+id/text_StoreName"
        android:textColor="#7e0f6ace"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/text_StoreDescription"

        android:gravity="center"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Store Description"
        android:textColor="#7e0f6ace"
        android:id="@+id/text_StoreDescription"
        android:layout_gravity="right|top"

        android:gravity="center"
        android:layout_alignBottom="@+id/img_store"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/text_StoreName" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/img_store"
        android:src="@drawable/shop"
        android:layout_alignTop="@+id/text_StoreName"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp" />


</RelativeLayout>
