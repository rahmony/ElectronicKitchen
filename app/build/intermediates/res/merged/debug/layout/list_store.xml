<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Store Name"
        android:id="@+id/text_StoreName"
        android:textColor="#7e0f6ace"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/text_StoreDescription" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_store"
        android:src="@drawable/ic_store"
        android:layout_marginRight="15dp"
        android:layout_alignTop="@+id/text_StoreName"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Store Description"
        android:textColor="#7e0f6ace"
        android:id="@+id/text_StoreDescription"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/text_StoreName"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp" />


</RelativeLayout>
