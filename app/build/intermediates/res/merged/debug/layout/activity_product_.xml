<?xml version="1.0" encoding="utf-8"?>


<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_row="0"
    android:layout_column="0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#7d0f6ace">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="452dp"
        android:layout_gravity="center|bottom"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="وصف المنتج"
            android:layout_marginRight="0dp"
            android:id="@+id/text_product_discription"
            android:layout_alignBottom="@+id/et_product_discription"
            android:layout_alignEnd="@+id/text_product_price"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="سعر المنتج"
            android:id="@+id/text_product_price"
            android:layout_marginRight="20dp"
            android:layout_above="@+id/et_product_discription"
            android:layout_alignParentEnd="true"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="اسم المنتج"
            android:id="@+id/text_product_name"
            android:layout_marginRight="20dp"
            android:layout_above="@+id/et_product_price"
            android:layout_alignParentEnd="true"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="صورة المنتج"
            android:id="@+id/text_product_image"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/text_product_discription"
            android:layout_marginTop="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/btn_product_save"
            android:textColor="#000000" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_product_price"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/et_product_name"
            android:layout_marginLeft="25dp"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/text_product_price"
            android:layout_alignEnd="@+id/btn_product_save" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_product_name"
            android:layout_alignParentTop="true"
            android:layout_marginTop="46dp"
            android:layout_marginLeft="25dp"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/text_product_name"
            android:layout_alignEnd="@+id/et_product_price" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_product_discription"
            android:layout_marginLeft="25dp"
            android:layout_below="@+id/et_product_price"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/et_product_price" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnImage_product_image"
            android:src="@mipmap/camera_logo"
            android:adjustViewBounds="false"
            android:layout_weight="0"
            android:layout_marginLeft="90dp"
            android:layout_below="@+id/text_product_discription"
            android:layout_alignStart="@+id/et_product_discription"
            android:layout_marginTop="30dp"
            android:layout_above="@+id/btn_product_save"
            android:layout_alignEnd="@+id/et_product_discription"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="90dp"
            android:onClick="onClick" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="حفظ"
            android:id="@+id/btn_product_save"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="52dp"
            android:background="#470e4582"
            android:textColor="#000000" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="إنشاء منتج جديد"
        android:id="@+id/textView8"
        android:layout_gravity="center|top"
        android:layout_marginTop="18dp"
        android:textColor="#ffffff" />
</FrameLayout>
