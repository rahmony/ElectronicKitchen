<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1"
    android:rowCount="1">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <GridLayout
                    android:id="@+id/tab_store_1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal"
                    android:columnCount="1"
                    android:rowCount="4">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="33dp"
                        android:background="#7d0f6ace"
                        android:layout_column="0"
                        android:layout_row="0"
                        android:baselineAligned="true"
                        android:layout_columnSpan="1"
                        android:layout_rowSpan="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/store_name"
                            android:id="@+id/text_store_Of_name"
                            android:layout_row="1"
                            android:layout_column="1"
                            android:layout_weight="1"
                            android:textColor="#ffffff"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_horizontal" />

                    </LinearLayout>

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:rowCount="1"
                        android:columnCount="1">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_column="0"
                            android:layout_row="0"
                            android:weightSum="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="@string/store_description"
                                android:id="@+id/text_store_Of_description"
                                android:textColor="#7e0f6ace"
                                android:textSize="14dp"
                                android:layout_column="1"
                                android:layout_row="0"
                                android:layout_weight="0.90"
                                android:autoText="false"
                                android:editable="false"
                                android:enabled="false"
                                android:gravity="center" />

                            <ImageView
                                android:layout_width="99dp"
                                android:layout_height="match_parent"
                                android:id="@+id/image_Of_store"
                                android:src="@drawable/shop"
                                android:layout_row="0"
                                android:layout_column="0"
                                android:onClick="onClick"
                                android:cropToPadding="false"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:nestedScrollingEnabled="false"
                                android:layout_weight="0.1" />

                        </LinearLayout>

                    </GridLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:background="@drawable/defend"
                        android:baselineAligned="true"
                        android:weightSum="1">

                    </LinearLayout>

                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="361dp"
                        android:id="@+id/listView_Of_product"
                        android:layout_row="3"
                        android:layout_column="0" >

                    </ListView>

                </GridLayout>

                <GridLayout
                    android:id="@+id/tab_store_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                </GridLayout>

            </FrameLayout>
        </LinearLayout>

</GridLayout>